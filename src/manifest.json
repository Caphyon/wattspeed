{
  "manifest_version": 3,
  "name": "Wattspeed",
  "version": "5.0.0",
  "description": "Wattspeed is a browser extension that offers powerful web performance insights and CrUX data each time you open a new web page.",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "action": {
    "default_icon": "assets/icons/icon-48.png",
    "default_popup": "index.html",
    "default_title": "Wattspeed"
  },
  "permissions": ["tabs", "activeTab", "unlimitedStorage"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
